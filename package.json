{
    "name": "topics-manager",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "auth0-js": "^9.6.0",
        "fbemitter": "^2.1.1",
        "firebase": "^5.2.0",
        "lodash-es": "^4.17.10",
        "prop-types": "^15.6.1",
        "react": "^16.3.2",
        "react-awesome-popover": "^2.0.6",
        "react-dom": "^16.3.2",
        "react-redux": "^5.0.7",
        "react-scripts": "1.1.4",
        "react-scripts-ts": "^2.17.0",
        "react-svg-piechart": "^2.1.1",
        "redux": "^4.0.0",
        "redux-thunk": "^2.3.0",
        "styled-components": "^3.4.5",
        "tslint": "^5.11.0",
        "typescript": "^3.0.3"
    },
    "scripts": {
        "start": "react-scripts-ts start",
        "build": "react-scripts-ts build",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage  --collectCoverageFrom=**/src/**/*.ts",
        "eject": "react-scripts-ts eject",
        "precommit": "lint-staged",
        "format": "prettier src/**/*.ts",
        "format:write": "prettier --write src/**/*.ts"
    },
    "devDependencies": {
        "@types/auth0-js": "^8.11.5",
        "@types/enzyme": "^3.1.14",
        "@types/enzyme-adapter-react-16": "^1.0.3",
        "@types/jest": "^23.3.1",
        "@types/node": "^10.9.4",
        "@types/react": "^16.4.13",
        "@types/react-dom": "^16.0.7",
        "@types/react-redux": "^6.0.9",
        "@types/redux-mock-store": "^1.0.0",
        "@types/styled-components": "^3.0.0",
        "ajv": "^6.5.0",
        "ajv-keywords": "^3.2.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.3",
        "babel-jest": "^22.4.3",
        "babel-plugin-styled-components": "^1.5.1",
        "babel-preset-env": "^1.6.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.3",
        "eslint": "^4.19.1",
        "eslint-plugin-jest": "^21.16.1",
        "eslint-plugin-react": "^7.8.2",
        "husky": "^1.0.0-rc.6",
        "identity-obj-proxy": "^3.0.0",
        "install": "^0.12.1",
        "jest": "^22.4.3",
        "jest-styled-components": "^5.0.1",
        "lint-staged": "^7.1.2",
        "npm": "^6.4.1",
        "or": "^0.2.0",
        "prettier": "1.13.4",
        "react-test-renderer": "^16.4.0",
        "redux-mock-store": "^1.5.1",
        "ts-jest": "^23.1.4"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "verbose": true,
        "snapshotSerializers": [
            "enzyme-to-json/serializer"
        ],
        "transformIgnorePatterns": [
            "/!node_modules\\/lodash-es/"
        ],
        "moduleNameMapper": {
            "\\.(css|less)$": "identity-obj-proxy"
        },
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run precommit",
            "pre-push": "npm test"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "prettier --write",
            "tslint --fix",
            "git add"
        ]
    },
    "src/**/*.tsx": [
        "prettier --write",
        "tslint --fix",
        "git add"
    ]
}
